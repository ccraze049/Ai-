modules = ["python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["cargo", "libiconv", "rustc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Train Model"

[[workflows.workflow]]
name = "Train Model"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python train.py --epochs 3 --batch_size 16 --hidden_size 128 --num_layers 4 --num_heads 4"

[workflows.workflow.metadata]
outputType = "console"
